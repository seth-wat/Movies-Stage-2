<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/review_constraint_root"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
        <TextView
            android:id="@+id/synopsis_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="@+id/user_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/user_name_text_view" />

        <Button
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Previous Review"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintTop_toBottomOf="@+id/synopsis_frame"
            app:layout_constraintLeft_toLeftOf="parent" />
        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Next Review"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintTop_toBottomOf="@+id/synopsis_frame"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>