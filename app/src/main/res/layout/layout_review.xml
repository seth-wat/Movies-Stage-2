<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/review_constraint_root"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-90dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/synopsis_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name_text_view"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Review"
            app:layout_constraintTop_toBottomOf="@+id/synopsis_frame"
            app:layout_constraintLeft_toLeftOf="@+id/synopsis_frame" />
        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Review"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/synopsis_frame"
            app:layout_constraintRight_toRightOf="@+id/synopsis_frame" />
    </android.support.constraint.ConstraintLayout>
</layout>