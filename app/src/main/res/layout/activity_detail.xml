<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp"
        tools:layout_editor_absoluteY="608dp"
        tools:layout_editor_absoluteX="336dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="639dp" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        tools:text="Chappie"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/release_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2015"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/title_text_view"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/rating_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="8.1 / 10"
        app:layout_constraintTop_toTopOf="@+id/title_text_view"
        android:layout_marginTop="8dp"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="7dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="120 min"
        app:layout_constraintBottom_toBottomOf="@+id/release_date_text_view"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="9dp"
        app:layout_constraintRight_toRightOf="@+id/rating_text_view"
        android:layout_marginEnd="9dp" />

    <ImageView
        android:id="@+id/drop_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/release_date_text_view"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/synopsis_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drop_image_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <include
        android:id="@+id/trailer_include"
        layout="@layout/layout_trailer"
        android:layout_height="wrap_content"
        android:layout_width="368dp"
        app:layout_constraintTop_toBottomOf="@+id/synopsis_text_view"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
</ScrollView>