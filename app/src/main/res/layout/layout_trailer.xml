<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trailer_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Great Britain Release Trailer" />

        <ImageView
            android:id="@+id/trailer_image_one"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:tint="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@+id/trailer_name_text_view"
            app:layout_constraintRight_toRightOf="@+id/trailer_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/trailer_name_text_view"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    </android.support.constraint.ConstraintLayout>
</layout>